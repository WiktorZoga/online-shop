<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<header class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center text-white" href="/">
            <i class="bi bi-house-fill me-2"></i> Sklep Internetowy
        </a>

        <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarContent" 
            aria-controls="navbarContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            
            <ul class="navbar-nav ms-auto">
                <% if (type === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/admin') ? 'active' : '' %>" href="/admin">
                            <i class="bi bi-speedometer2 me-1"></i> Panel Admina
                        </a>
                    </li>                    
                <% } %>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath.startsWith('/products') ? 'active' : '' %>" href="/products">
                        <i class="bi bi-box-seam me-1"></i> Produkty
                    </a>
                </li>
                <% if (type !== 'guest') { %>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/account') ? 'active' : '' %>" href="/account">
                            <i class="bi bi-person-circle me-1"></i> Konto
                        </a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath.startsWith('/cart') ? 'active' : '' %>" href="/cart">
                        <i class="bi bi-cart me-1"></i> Koszyk
                    </a>
                </li>
                <% if (type === 'guest') { %>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPath.startsWith('/login') ? 'active' : '' %>" href="/login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Zaloguj się
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-warning ms-2" href="/signup">Zarejestruj się</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="bi bi-box-arrow-right me-1"></i> Wyloguj się
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</header>
